<div class="row">
  <div class="col-md-6 mx-auto">
    <div class="card mt-1 text-center">
      <div class="h4">
        Novo Registro 
      </div>
      <div class="card-body">
        <form action="/users/signup" method="POST">
          <div class="form-group">
            <input type="text" name="nome" placeholder="Nome" class="form-control" value="{{nome}}">
          </div>
          <div class="form-group">
           <input type="text" name="email" placeholder="E-Mail" class="form-control" value="{{email}}">
          </div>
          <div class="form-group">
             <input type="password" name="senha" placeholder="Senha" class="form-control">
          </div>
          <div class="form-group">
            <input type="password" name="confirmarsenha" placeholder="Confirme a senha" class="form-control">
          </div>
          <button class="btn btn-dark btn-block">
            Novo 
          </button>
          <br>
          <p class="lead mt-4">Já possuí uma conta? <a href="/users/signin">Login</a></p>
        </form>
      </div>
    </div>
  </div>
</div>